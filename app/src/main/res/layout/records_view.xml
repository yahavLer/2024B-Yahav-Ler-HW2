<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".records_activity"
    android:orientation="vertical"
    android:keepScreenOn="true">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_LBL_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:text="your records"
        android:textSize="26dp"
        android:textColor="#A58AEF"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/main_LAY_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:padding="16dp"
        android:background="#DEDEDE"
        android:layout_weight="1"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_LBL_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:text="Map Of The Records"
        android:textSize="26dp"
        android:textColor="#A58AEF"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/main_LAY_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:background="#DEDEDE"
        android:layout_weight="1"/>

</androidx.appcompat.widget.LinearLayoutCompat>
